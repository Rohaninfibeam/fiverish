<div>
  <% if flash[:error].present?%>
    <%= content_tag :div, flash[:error], class: "error" %>
  <% end %>
</div>
<p>
  <strong>Name:</strong>
  <%= @order.service.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @order.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @order.quantity %>
</p>

<p>
  <strong>Total Price</strong>
  <%= @order.total_price%>
</p>

<%= form_for current_user.credit_cards.new, url: create_payment_orders_path do |f| %>
  <%= hidden_field_tag :order_id, @order.id %>

  <%= f.text_field :number, placeholder: 'Card number' %>
  <%= f.text_field :month, placeholder: 'Expired month'  %>
  <%= f.text_field :year, placeholder: 'Expired year'  %>
  <%= f.text_field :cvc, placeholder: 'CVC'  %>

  <%= f.button :submit  %>
<% end %>
